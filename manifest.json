{
  "name": "Online-GPT",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Chat with GPT on any webpage",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "storage", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["libs/marked.js", "content.js", "style.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "config.html",
  "browser_action": {
    "default_icon": "images/icon.jpeg",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "style.css"
  ]
}
