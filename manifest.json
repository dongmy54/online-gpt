{
  "manifest_version": 3,
  "name": "Online-GPT",
  "version": "1.0",
  "description": "Chat with GPT on any webpage",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://api.openai.com"
  ],
  "action": {
    "default_icon": {
      "16": "images/16icon.png",
      "48": "images/48icon.png",
      "128": "images/128icon.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["libs/marked.js", "content.js", "style.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "config.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "images/16icon.png",
    "48": "images/48icon.png",
    "128": "images/128icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["*://*/*"]
    }
  ]
}
